<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Issue.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Issue"
    xmlns:views="clr-namespace:Issue.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Tareas"
        ContentTemplate="{DataTemplate views:TaskListPage}"
        Route="TaskListPage" />

    <ShellContent
        Title="Notificaciones"
        ContentTemplate="{DataTemplate views:NotificationSettingsPage}"
        Route="NotificationSettingsPage" />

</Shell>
